{
  "version": 2,
  "alias": "adamsherwood.dev",
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": {
        "distDir": "public"
      }
    }
  ],
  "routes": [
    { "src": "/bundle.(.*)", "dest": "/bundle.$1" },
    { "src": "/(.*).jpg", "dest": "/$1.jpg" },
    { "src": "/(.*).png", "dest": "/$1.png" },
    { "src": "/(.*).css", "dest": "/$1.css" },
    { "src": "/(.*).pdf", "dest": "/$1.pdf" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
